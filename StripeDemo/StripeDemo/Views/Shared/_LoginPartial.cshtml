@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInMgr
@inject UserManager<IdentityUser> UserMgr

@if (SignInMgr.IsSignedIn(User)) {
    <form id="logoutForm" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Home/Index" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserMgr.GetUserName(User)</a></li>
            <li class="nav-item"><button class="btn btn-link nav-link" type="submit">Logout</button></li>
        </ul>
    </form>
} else {
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a></li>
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a></li>
    </ul>
}