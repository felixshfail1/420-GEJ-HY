<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">

    <title>@ViewData["Title"] - Stripe Demo</title>
</head>
<body>
    <header class="container bg-dark rounded-bottom">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Stripe Demo</a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse"
                    data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#"
                           data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false">
                            Payment Method
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <div class="dropdown-header">One-Time Payment</div>
                            <a asp-controller="Payment" asp-action="RequestButton" class="dropdown-item">Request Payment Button</a>
                            <a asp-controller="Payment" asp-action="Elements" class="dropdown-item">Stripe Elements</a>
                            <div class="dropdown-divider"></div>
                            <div class="dropdown-header">Subscription</div>
                            <a asp-controller="Subscription" asp-action="Index" class="dropdown-item">Stripe Subscribtion</a>
                        </div>
                    </li>
                </ul>
                <div class="ml-auto">
                    <partial class="ml-auto" name="_LoginPartial">
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-2">
        @RenderBody()
    </main>

    <footer class="container text-center bg-dark rounded-top">
        <p class="text-muted my-2">&copy; @DateTime.Now.Year - Stripe Demo</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
