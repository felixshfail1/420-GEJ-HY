@model IEnumerable<IdentityRole>

@{ Layout = "_Layout"; }

<div class="bg-primary my-1 p-1 text-white">
    <h4>Roles</h4>
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>  

<table class="table table-striped table-bordered my-1">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Users</th>
            <th></th>
        </tr>
    </thead>

    @if(!Model.Any()) {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>

    } else {
        foreach(var role in Model) {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><user-list role-id="@role.Id"></user-list></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<div class="float-right my-1">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>