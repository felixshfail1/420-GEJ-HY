@model IEnumerable<Claim>

@{ Layout = "_Layout"; }

<div class="bg-primary my-1 p-1 text-white">
    <h4>Claims</h4>
</div>

<table class="table table-striped table-bordered my-1">
    <thead class="thead-dark">
        <tr>
            <th>Subject</th>
            <th>Issuer</th>
            <th>Type</th>
            <th>Value</th>
        </tr>
    </thead>

    @if(!Model?.Any() ?? true) {
        <tr><td colspan="4" class="text-center">No Claims</td></tr>

    } else {
        @foreach(var claim in Model.OrderBy(x => x.Type)) {
            <tr>
                <td>@claim.Subject.Name</td>
                <td>@claim.Issuer</td>
                <td><claim-infos claim-type="@claim.Type"></claim-infos></td>
                <td>@claim.Value</td>
            </tr>
        }
    }
</table>